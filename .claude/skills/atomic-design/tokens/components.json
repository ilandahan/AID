{
  "button": {
    "variants": {
      "primary": {
        "bg": "{semantic.primary}",
        "bg-hover": "{semantic.primary-hover}",
        "text": "{semantic.text-inverse}",
        "border": "none"
      },
      "secondary": {
        "bg": "transparent",
        "bg-hover": "{semantic.surface-secondary}",
        "text": "{semantic.text-primary}",
        "border": "{semantic.border}"
      },
      "ghost": {
        "bg": "transparent",
        "bg-hover": "{semantic.surface-secondary}",
        "text": "{semantic.text-secondary}",
        "border": "none"
      },
      "danger": {
        "bg": "{semantic.error}",
        "bg-hover": "{red.700}",
        "text": "{semantic.text-inverse}",
        "border": "none"
      }
    },
    "sizes": {
      "sm": {
        "padding": "{spacing.1.5} {spacing.3}",
        "fontSize": "{typography.fontSize.xs}",
        "height": "2rem"
      },
      "md": {
        "padding": "{spacing.2} {spacing.4}",
        "fontSize": "{typography.fontSize.sm}",
        "height": "2.5rem"
      },
      "lg": {
        "padding": "{spacing.3} {spacing.6}",
        "fontSize": "{typography.fontSize.base}",
        "height": "3rem"
      }
    },
    "borderRadius": "{borderRadius.md}",
    "transition": "all 150ms ease"
  },
  "input": {
    "padding": "{spacing.input-padding-y} {spacing.input-padding-x}",
    "borderRadius": "{borderRadius.md}",
    "border": "1px solid {semantic.border}",
    "border-focus": "1px solid {semantic.border-focus}",
    "bg": "{semantic.surface}",
    "text": "{semantic.text-primary}",
    "placeholder": "{semantic.text-muted}",
    "height": "2.5rem",
    "states": {
      "error": {
        "border": "{semantic.error}",
        "bg": "{semantic.error-light}"
      },
      "disabled": {
        "bg": "{semantic.surface-secondary}",
        "cursor": "not-allowed"
      }
    }
  },
  "card": {
    "bg": "{semantic.surface}",
    "border": "1px solid {semantic.border}",
    "borderRadius": "{borderRadius.lg}",
    "padding": "{spacing.card-padding}",
    "shadow": "{shadow.base}",
    "shadow-hover": "{shadow.md}"
  },
  "modal": {
    "bg": "{semantic.surface}",
    "borderRadius": "{borderRadius.xl}",
    "padding": "{spacing.modal-padding}",
    "shadow": "{shadow.xl}",
    "backdrop": "{semantic.backdrop}",
    "maxWidth": {
      "sm": "24rem",
      "md": "32rem",
      "lg": "48rem"
    }
  },
  "badge": {
    "padding": "{spacing.1} {spacing.2}",
    "borderRadius": "{borderRadius.full}",
    "fontSize": "{typography.fontSize.xs}",
    "fontWeight": "{typography.fontWeight.medium}",
    "variants": {
      "default": { "bg": "{gray.100}", "text": "{gray.700}" },
      "primary": { "bg": "{blue.100}", "text": "{blue.700}" },
      "success": { "bg": "{green.100}", "text": "{green.700}" },
      "warning": { "bg": "{yellow.100}", "text": "{yellow.700}" },
      "error": { "bg": "{red.100}", "text": "{red.700}" }
    }
  },
  "avatar": {
    "sizes": {
      "sm": "2rem",
      "md": "2.5rem",
      "lg": "3rem",
      "xl": "4rem"
    },
    "borderRadius": "{borderRadius.full}",
    "bg": "{gray.200}",
    "text": "{gray.600}"
  }
}
