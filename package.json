{
  "name": "aid-methodology",
  "version": "1.0.0",
  "description": "AID - AI Development Methodology. Transform requirements into production-ready software using Claude Code.",
  "author": "Ilan Dahan",
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "scripts": {
    "setup": "./install.sh",
    "setup:win": "install.bat",
    "link-project": "./link-project.sh",
    "link-project:win": "link-project.bat",
    "new-project": "./scripts/init-project.sh",
    "storybook": "cd storybook-preview && npm run storybook",
    "storybook:build": "cd storybook-preview && npm run build-storybook",
    "storybook:link": "cd storybook-preview && npm run link",
    "test:install": "python -m pytest testing/e2e/test_installation.py -v",
    "test:mcp": "python -m pytest testing/e2e/test_mcp_sanity.py -v",
    "test:memory": "python -m pytest testing/e2e/test_memory_system_sanity.py -v",
    "test:all": "python -m pytest testing/e2e/ -v",
    "install:mcp": "npm run install:mcp:filesystem && npm run install:mcp:jira && npm run install:mcp:confluence && npm run install:mcp:github && npm run install:mcp:figma && npm run install:mcp:chrome",
    "install:mcp:filesystem": "npx -y @modelcontextprotocol/server-filesystem --help || true",
    "install:mcp:jira": "npx -y @aashari/mcp-server-atlassian-jira --help || true",
    "install:mcp:confluence": "npx -y @aashari/mcp-server-atlassian-confluence --help || true",
    "install:mcp:github": "npx -y @modelcontextprotocol/server-github --help || true",
    "install:mcp:figma": "npx -y figma-developer-mcp --help || true",
    "install:mcp:chrome": "npx -y chrome-devtools-mcp@latest --help || true",
    "security:audit": "npm audit"
  },
  "optionalDependencies": {
    "chrome-devtools-mcp": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude-code",
    "mcp",
    "ai-development",
    "methodology",
    "figma",
    "jira",
    "atomic-design"
  ],
  "devDependencies": {
    "prisma": "^6.19.1"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1"
  }
}
